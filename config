# set primary gruvbox colorscheme colors
set $bg       #282828
set $red      #cc241d
set $green    #aeae1e
set $orange   #d79921
set $yellow   #e6e600
set $blue     #224244
set $purple   #b16286
set $aqua     #83af83
set $gray     #a89984
set $darkgray #1d2021
set $white    #ffffff
set $black    #000000
set $lgray    #bdae93
set $stone    #3a3a3a

# font used by i3 for titles and bars, global
font pango:CaskaydiaCove Nerd Font Mono 12

bar {
  status_command i3status -c ~/.config/i3/i3status.conf
  # i3bar_command i3bar --transparency
  i3bar_command i3bar
  position top
  # font pango:CaskaydiaCove Nerd Font Mono 12
  tray_output primary
  separator_symbol ":|:"

  colors {
    # bar background color
    background $bg
    # text color used for blocks that do not have a color specified.
    statusline $orange
    separator  $aqua
    # font for bar
    # font pango:CaskaydiaCove Nerd Font Mono 12

    # workspaces section
    #                    border    backgr.   text
    focused_workspace    $green    $green    $black
    inactive_workspace   $darkgray $darkgray $orange
    active_workspace     $darkgray $darkgray $orange
    urgent_workspace     $red      $red      $bg
  }
}

# class                 border    backgr.   text    indic.  child_border
client.focused          $darkgray $stone    $orange $purple $darkgray
client.unfocused        $darkgray $darkgray $orange $purple $darkgray
client.focused_inactive $darkgray $darkgray $orange $purple $darkgray
client.urgent           $red      $red      $white  $red    $red

